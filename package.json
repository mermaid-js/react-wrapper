{
  "name": "mermaid-react",
  "author": "Michael Shilman",
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/ts/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "buildBabel": "IGNORE_FILES=true concurrently \"yarn buildBabel:cjs\" \"yarn buildBabel:esm\"",
    "buildBabel:cjs": "babel ./src -d ./dist/cjs --extensions \".js,.jsx,.ts,.tsx\"",
    "buildBabel:esm": "babel ./src -d ./dist/esm --env-name esm --extensions \".js,.jsx,.ts,.tsx\"",
    "buildTsc": "tsc --declaration --emitDeclarationOnly --outDir ./dist/ts",
    "prebuild": "yarn clean",
    "build": "concurrently \"yarn buildBabel\" \"yarn buildTsc\"",
    "build:watch": "concurrently \"yarn buildBabel:cjs -- --watch\" \"yarn buildTsc -- --watch\"",
    "test": "jest",
    "start": "yarn storybook",
    "release": "yarn build && auto shipit",
    "lint": "eslint --cache --cache-location=.cache/eslint --ext .js,.jsx,.html,.ts,.tsx,.mjs",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "@types/mermaid": "^8.2.7",
    "mermaid": "^8.14.0"
  },
  "devDependencies": {
    "@auto-it/released": "^10.32.6",
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/template": "^7.14.5",
    "@babel/types": "^7.14.8",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/eslint-config-storybook": "^3.1.2",
    "@storybook/react": "^6.4.19",
    "@testing-library/dom": "^8.1.0",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.3",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "auto": "^10.3.0",
    "babel-loader": "^8.1.0",
    "concurrently": "^7.0.0",
    "eslint": "^7.32.0",
    "husky": ">=6",
    "jest": "^27.0.6",
    "jest-environment-jsdom": "^27.0.6",
    "lint-staged": ">=10",
    "prettier": "^2.3.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.4",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "*.{ts,js,css,md}": "prettier --write"
  },
  "auto": {
    "plugins": [
      "npm",
      "released"
    ]
  }
}
